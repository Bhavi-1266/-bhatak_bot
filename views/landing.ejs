}
  
.features {
grid-template-columns: repeat(2, 1fr);
gap: 0.8rem;
margin: 1.5rem 0;
}

.feature {
padding: 0.8rem;
}

.feature-icon {
font-size: 1.5rem;
}

.feature-text {
font-size: 0.8rem;
}

.about {
padding: 1.2rem 1rem;
font-size: 0.85rem;
margin: 1.5rem 0;
}
}

.sparkle {
position: absolute;
color: var(--accent);
font-size: 1rem;
animation: sparkle 2s ease-in-out infinite;
pointer-events: none;
}

@keyframes sparkle {
0%, 100% { opacity: 0; transform: scale(0) rotate(0deg); }
50% { opacity: 1; transform: scale(1) rotate(180deg); }
}
</style>
</head>
