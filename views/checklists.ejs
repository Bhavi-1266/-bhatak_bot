<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/home/style.css">
  <title>Checklist Chacha | à¤­à¤Ÿà¤•Bot</title>
</head>
<body>
<div class="main-layout">
  <div class="side-panel">
    <div class="side-logo">à¤­à¤Ÿà¤•Bot</div>
    <div class="side-boxes">
      <a href="/chappal" class="side-box">Chappal Mode</a>
      <a href="/cab" class="side-box">Call a cab</a>
      <a href="/checklists" class="side-box">Checklist Chacha</a>
    </div>
  </div>
  <div class="main-panel">
    <div class="chatbox">
      <h1 style="color: var(--primary);">Your Checklists</h1>
      <ul>
        <% checklists.forEach(cl => { %>
          <li style="margin-bottom: 0.8rem;">
            <a href="/checklists/<%= cl.id %>" style="color: var(--text-light); font-weight: 600; text-decoration: none;">ðŸ”– <%= cl.title %></a>
            <form action="/checklists/<%= cl.id %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Confirm <%= cl.title %> deletion?');" style="display:inline-block; margin-left:1rem;">
              <button type="submit" class="chat-send-btn" style="background:#ff5555;">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
      <hr>
      <form action="/checklists/create" method="POST">
        <h3 style="color: var(--accent);">Create New Checklist</h3>
        <input name="title" placeholder="Title" required class="chat-input"><br><br>
        <textarea name="purpose" placeholder="Purpose for checklist" required class="chat-input" style="height: 100px;"></textarea><br><br>
        <button type="submit" class="chat-send-btn">Generate Checklist</button>
      </form>
    </div>
  </div>
</div>
<script src="/checklists/script.js"></script>
</body>
</html>